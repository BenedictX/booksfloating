<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="25dp"
    android:background="@color/white"
     >
  
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:orientation="vertical">
         <TextView 
        android:id="@+id/tv_myinfo_order_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:textSize="@dimen/nav_textsize_16"
        android:text="时间: 2016-2-1 15:11"/>
    <TextView 
        android:id="@+id/tv_myinfo_order_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/theme_blue"
        android:lineSpacingMultiplier="1.2"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="5dp"
        android:textSize="@dimen/nav_textsize_13"
        android:text="关于'think in java, (美) 埃克尔，西安电子科技大学南馆'的求助"/>
    </LinearLayout>
  
    

</RelativeLayout>
