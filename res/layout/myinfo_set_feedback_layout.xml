<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    
    android:orientation="vertical" >
    
    <!-- 导航栏 -->  
     <include layout="@layout/nav_feedback_layout"/>
    
    <EditText 
        android:id="@+id/et_myinfo_set_feedback"
        
        
        
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/nav_marginTop_10"
        android:gravity="center_vertical|top"
        android:hint="@string/feedback_problem"
        android:inputType="textMultiLine"
        android:singleLine="false"
        android:textSize="@dimen/nav_textsize_16"
        android:background="@drawable/textview_bg">
        <requestFocus />
    </EditText>
    	
    <Button 
        android:id="@+id/btn_myinfo_set_feedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_margin="10dp"
        android:background="@drawable/shape"
        android:text="@string/btn_my_info_set_reset_confirm"
        android:textColor="@color/white"/>
    

</LinearLayout>
